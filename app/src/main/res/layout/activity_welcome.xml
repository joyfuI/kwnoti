<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorPrimary"
	tools:context=".WelcomeActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:gravity="center_horizontal" >

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="50dp"
			android:text="안녕하세요, 광운알리미입니다."
			android:textStyle="bold"
			android:textColor="#FFFFFF"
			android:textSize="20sp" />
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			android:gravity="center"
			android:text="광운알리미를 사용해주셔서 감사합니다.\n
광운알리미는 광운대학교 학생을 위한 어플리케이션으로,\n
모바일프로그래밍의 앱 따라하기 과제를 위해 제작되었습니다.\n
이에 기존 광운알리미 앱에 비해 부족한 점이 많습니다.\n
광운알리미는 유캠퍼스 기능을 위해 유캠퍼스 개인정보를\n
입력해야 합니다.\n
개인정보는 사용자의 휴대폰 내에만 저장되므로 유출\n
우려가 없으며,\n
개인정보 입력은 필수가 아님을 알려드립니다."
			android:textColor="#FFFFFF"
			android:textSize="15sp" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="50dp"
			android:text="개인 정보 입력"
			android:textStyle="bold"
			android:textColor="#FFFFFF"
			android:textSize="20sp" />
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			android:gravity="center"
			android:text="유캠퍼스 기능을 위해 개인정보를 입력합니다.\n
유캠퍼스를 사용하지 않으시면 계속을 눌러주세요."
			android:textColor="#FFFFFF"
			android:textSize="15sp" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:text="학번"
			android:textStyle="bold"
			android:textColor="#FFFFFF"
			android:textSize="17sp" />
		<EditText android:id="@+id/id"
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:inputType="number"
			android:singleLine="true"
			android:hint="2018123456" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:text="유캠퍼스 비밀번호"
			android:textStyle="bold"
			android:textColor="#FFFFFF"
			android:textSize="17sp" />
		<EditText android:id="@+id/passwd"
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:inputType="textPassword"
			android:singleLine="true"
			android:hint="1234" />

	</LinearLayout>

	<Button
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_gravity="bottom"
		android:layout_alignParentBottom="true"
		android:gravity="center"
		android:background="@color/colorPrimaryDark"
		android:text="계속"
		android:textColor="#FFFFFF"
		android:textSize="18sp"
		android:onClick="onClick" />

</RelativeLayout>